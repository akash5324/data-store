
{{#each data}}
<div class="card text-white bg-success mb-3  border-primary" style="max-width: 40rem;left:20%">
  <div class="card-header"><h2><span>Title:&nbsp;</span>{{title}}</h2></div>
  <div class="card-body">
    <p class="card-text"><span>Description:&nbsp;</span>{{description}}</p>
    <hr>
  </div>
  <div class="row align-items-center">

    <div class="col mb-3 ml-3">
    <a href="/editData/{{id}}" style="margin-bottom:10px"><button class="btn btn-secondary" style="width:130px">Edit</button></a>
    </div>
      <div class="col mb-3">
   <form method="post" action="/editData/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger col-md-6">Delete</button>
    </form>
</div>
    </div>
</div>
{{else}}
<div class="jumbotron">
  <h1 class="display-4">You don't have any Data collection yet.....</h1>
  <hr class="my-4">
</div>

{{/each}}

 
